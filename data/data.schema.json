{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Haven Starmap Data Schema",
  "type": "object",
  "required": ["_meta", "data"],
  "definitions": {
    "moon": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {"type": "string"},
        "sentinel": {"type": "string"},
        "fauna": {"type": "string"},
        "flora": {"type": "string"},
        "properties": {"type": "string"},
        "materials": {"type": "string"},
        "base_location": {"type": "string"},
        "photo": {"type": "string"},
        "notes": {"type": "string"}
      },
      "additionalProperties": false
    },
    "planet": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {"type": "string"},
        "sentinel": {"type": "string"},
        "fauna": {"type": "string"},
        "flora": {"type": "string"},
        "properties": {"type": "string"},
        "materials": {"type": "string"},
        "base_location": {"type": "string"},
        "photo": {"type": "string"},
        "notes": {"type": "string"},
        "moons": {
          "type": "array",
          "items": {"$ref": "#/definitions/moon"}
        }
      },
      "additionalProperties": false
    }
  },
  "properties": {
    "_meta": {
      "type": "object",
      "properties": {
        "version": {"type": "string"},
        "last_modified": {"type": "string", "format": "date-time"}
      },
      "additionalProperties": true
    },
    "data": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "required": ["type", "region", "x", "y", "z"],
            "properties": {
              "type": {"const": "region"},
              "region": {"type": "string"},
              "x": {"type": "number"},
              "y": {"type": "number"},
              "z": {"type": "number"},
              "id": {"type": "string"}
            },
            "additionalProperties": false
          },
          {
            "type": "object",
            "required": ["id", "name", "region", "x", "y", "z"],
            "properties": {
              "id": {"type": "string"},
              "name": {"type": "string"},
              "region": {"type": "string"},
              "x": {"type": "number"},
              "y": {"type": "number"},
              "z": {"type": "number"},
              "attributes": {"type": "string"},
              "planets": {
                "oneOf": [
                  {
                    "type": "array",
                    "items": {"type": "string"}
                  },
                  {
                    "type": "array",
                    "items": {"$ref": "#/definitions/planet"}
                  }
                ]
              },
              "planets_names": {
                "type": "array",
                "items": {"type": "string"}
              }
            },
            "additionalProperties": true
          }
        ]
      }
    }
  },
  "additionalProperties": false
}
