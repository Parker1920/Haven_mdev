{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://haven-starmap.org/schema/data.json",
  "title": "Haven Starmap Data Schema",
  "description": "Schema for Haven Starmap system data files (Version 3.0.0+)",
  "type": "object",
  "required": ["_meta"],
  "properties": {
    "_meta": {
      "type": "object",
      "description": "Metadata about the data file",
      "required": ["version"],
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Data schema version (semver format)"
        },
        "last_modified": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of last modification"
        },
        "system_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of systems in the file"
        }
      }
    }
  },
  "patternProperties": {
    "^(?!_meta$).*$": {
      "type": "object",
      "description": "Star system entry (key is the system name)",
      "required": ["id", "name", "region", "x", "y", "z"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^SYS_",
          "description": "Unique system identifier starting with SYS_"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "System name"
        },
        "region": {
          "type": "string",
          "minLength": 1,
          "description": "Galactic region name"
        },
        "x": {
          "type": "number",
          "minimum": -100,
          "maximum": 100,
          "description": "X coordinate (-100 to 100)"
        },
        "y": {
          "type": "number",
          "minimum": -100,
          "maximum": 100,
          "description": "Y coordinate (-100 to 100)"
        },
        "z": {
          "type": "number",
          "minimum": -25,
          "maximum": 25,
          "description": "Z coordinate (-25 to 25)"
        },
        "attributes": {
          "type": "string",
          "description": "Additional system attributes"
        },
        "planets": {
          "type": "array",
          "description": "List of planets in the system",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1,
                "description": "Planet name"
              },
              "sentinel": {
                "type": "string",
                "enum": ["None", "Low", "Medium", "High", "Aggressive"],
                "description": "Sentinel activity level"
              },
              "moons": {
                "type": "array",
                "description": "List of moons orbiting this planet",
                "items": {
                  "type": "object",
                  "required": ["name"],
                  "properties": {
                    "name": {
                      "type": "string",
                      "minLength": 1,
                      "description": "Moon name"
                    }
                  }
                }
              }
            }
          }
        },
        "planets_names": {
          "type": "array",
          "description": "Legacy: List of planet names (for backward compatibility)",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
